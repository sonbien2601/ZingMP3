<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.PlayMusicFragment"
    android:background="@color/black"
    android:orientation="vertical">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarPlayMusic"
        app:title="Playing Music"
        app:titleTextColor="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"/>
    <Button
        android:id="@+id/btnBackSong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:textSize="20dp"></Button>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <SeekBar
            android:id="@+id/skkSong"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:progressTint="@color/colorAccent"
            android:progressBackgroundTint="@color/colorPrimaryDark"
            android:layout_centerHorizontal="true"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">
        <ImageButton
            android:id="@+id/btnplaySong"
            android:layout_width="83dp"
            android:layout_height="61dp"
            android:src="@drawable/play">
        </ImageButton>
        <ImageButton
            android:id="@+id/btnstopSong"
            android:layout_width="63dp"
            android:layout_height="match_parent"
            android:src="@drawable/store_blue_24dp">
        </ImageButton>
    </LinearLayout>
</LinearLayout>